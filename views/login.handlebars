<head>
  <title>Login | Flexcellent</title>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@1.0.2/css/pico.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/login-register-stylesheet.css" />
  <link rel="stylesheet" href="/css/master-stylesheet.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bruno+Ace&family=Farsan&display=swap" rel="stylesheet">
</head>


<body>
  <img id="logo">

  <header>
    <h2 id="tittle">Flexcellent</h2>
  </header>
  <main>
    <div id="mainCard">
      <form class="form login-form">
        {{!-- TODO: Tweak logo spacing so it sits between "Email" and the top of the login card --}}
        <img src="/assets/images/flexcellent-logo.png" alt="Flexcellent Fitness Logo" style="max-width: 200px; display: block; margin: 0 auto;">
        <div class="form-group">
          <label for="email-login">Email</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">It's flexellent you're here. Please sign in.</button>
        </div>
      </form>
      <p class="textCard" id="show-signup-form"><a href="/register">New here? Sign up!</a></p>
    </div>
  </main>

  <script src="/js/login.js" type="text/javascript"></script>
</body>