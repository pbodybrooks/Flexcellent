<head>
    <title>Login | Flexcellent</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@1.0.2/css/pico.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/master-stylesheet.css" />
    <link rel="stylesheet" href="/css/login-register-stylesheet.css" />
</head>


<body>
  <img id="logo">

  <h2>Login</h2>
  <p>It's flexellent you're here. Please sign in.</p>

  <form class="form login-form">
    <div class="form-group">
      <label for="email-login">email</label>
      <input class="form-input" type="text" id="email-login" />
    </div>
    <div class="form-group">
      <label for="password-login">password</label>
      <input class="form-input" type="password" id="password-login" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Log in</button>
    </div>
  </form>
  <p id="show-signup-form">New here? <a href="/register">Sign up!</a></p>

  <script src="/js/login.js" type="text/javascript"></script>
</body>