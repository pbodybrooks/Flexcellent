<!DOCTYPE html>
<html lang="en">

  {{!-- TODO: add {{ if logged_in }} somewhere--}}

<head>
    <title>API TEST</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@1.0.2/css/pico.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../css/style.css" />
    <!-- <script src="https://cdn.jsdelivr.net/npm/dotenv@10.0.0/dist/browser.js"></script> -->
</head>

<body>
  <form action="/explore" method="GET">
    <label for="muscleGroup">Select a muscle group:</label>
    <select name="muscleGroup" id="muscleGroup">
      {{#each muscleGroups}}
        <option value="{{value}}" id="{{id}}">{{label}}</option>
      {{/each}}
    </select>
  </form>

  {{!-- <a href="/explore"></a> --}}

  <button class="btn-red" id="getExercises">Get Exercises! [Call API]</button>
  <button class="btn-red" id="getRandomExercises">Get Random Exercises! [Call API]</button>
  <button class="btn-red" id="getAllExercises">Get All Exercises! [Call API]</button>
  <button id="retrieve">Retrieve from local storage</button>

  <div class="m-4" id="exerciseContainer">
    {{#each exercises}}
      <div class="card">
        <div class="card-header">
          <h2 id="exerciseName">{{toTitleCase name}}</h2>
        </div>
        <div class="card-body">
          <p id="exerciseMuscle">{{toTitleCase muscle}}</p>
          <p id="exerciseEquipment">{{toTitleCase equipment}}</p>
          <p id="exerciseDifficulty">{{toTitleCase difficulty}}</p>
          <p id="exerciseInstructions">{{ instructions}}</p>
        </div>
        <p id="messageUser"></p>
      </div>
    {{/each}}
  </div>

  <script src="https://cdn.jsdelivr.net/npm/handlebars@4.7.7/dist/handlebars.min.js"></script>
  <script src="/js/script.js" type="text/javascript"></script>
</body>

</html>
